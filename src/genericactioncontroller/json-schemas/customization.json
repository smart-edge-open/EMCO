              "scope": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
              },
              "clusterprovider": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
              },
              "clustername": {
                "type": "string",
                "maxLength": 128
                
              },
              "clusterlabel": {
                "type": "string",
                "maxLength": 128
                
              },
              "mode": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
              }
            }
          },
          "patchType" :{
            "type": "string",
            "maxLength": 128
            
          },
          "patchJson" : {
            "type":"array"
          }
        }
      },
      "metadata": {
        "required": ["name"],
        "properties": {
          "userData2": {
            "description": "User relevant data for the resource",
