{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"properties": {
	  "metadata": {
      "required": ["name"],
          "properties": {
            "userData2": {
              "description": "User relevant data for the resource",
              "type": "string",
              "example": "Some more data",
              "maxLength": 512
            },
            "userData1": {
              "description": "User relevant data for the resource",
              "type": "string",
              "example": "Some data",
              "maxLength": 512
            },
            "name": {
              "description": "Name of the resource",
              "type": "string",
              "example": "ResName",
              "maxLength": 128,
              "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
            },
            "description": {
              "description": "Description for the resource",
              "type": "string",
              "example": "Resource description",
              "maxLength": 1024
            }
          }
        },
	  "spec": {
      "required": ["name"],
      "properties": {
        "api-version": {
          "type": "string",
          "description": "K8s version (e.g apps/v1)",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "description": "Type of object (e.g. Deployment)",
          "minLength": 1
        },
        "replicas": {
          "description": "Replicas of the consumer object(e.g. Deployment)",
          "type": "integer",
          "format": "int64",
          "minimum": 1
        },
        "name": {
          "type": "string",
          "description": "From metadata/name field of the consumer object",
          "minLength": 1
        },
        "container-name": {
          "type": "string",
          "description": "Container name of the consumer object. This field is required for allocatable resources only",
          "minLength": 1
        }
      }
	  }
	}
}